---
interface Props {
  study: {
    title: string;
    scenario: string;
    approach: string;
    outcome: string;
  };
}

const { study } = Astro.props;
---

<div class="p-5 rounded-lg border border-gray-200 dark:border-gray-800 mb-4">
  <h3 class="font-semibold text-lg mb-3">{study.title}</h3>
  <div class="space-y-3 text-sm">
    <div>
      <span class="font-medium text-gray-900 dark:text-gray-200">Scenario:</span>
      <span class="text-gray-600 dark:text-gray-400"> {study.scenario}</span>
    </div>
    <div>
      <span class="font-medium text-gray-900 dark:text-gray-200">Approach:</span>
      <span class="text-gray-600 dark:text-gray-400"> {study.approach}</span>
    </div>
    <div class="flex items-start gap-2">
      <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
      </svg>
      <div>
        <span class="font-medium text-gray-900 dark:text-gray-200">Outcome:</span>
        <span class="text-gray-600 dark:text-gray-400"> {study.outcome}</span>
      </div>
    </div>
  </div>
</div>
