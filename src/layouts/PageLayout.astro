---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/global/Breadcrumbs.astro';

interface Props {
  title: string;
  description?: string;
  breadcrumbs?: Array<{ label: string; href: string; current?: boolean }>;
}

const { title, description, breadcrumbs } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {breadcrumbs && <Breadcrumbs items={breadcrumbs} />}
    <h1 class="text-3xl sm:text-4xl font-bold mb-8">{title}</h1>
    <slot />
  </div>
</BaseLayout>
