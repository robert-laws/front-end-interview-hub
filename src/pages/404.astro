---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="max-w-2xl mx-auto px-4 py-24 text-center">
    <p class="text-6xl font-bold text-primary-600 dark:text-primary-400 mb-4">404</p>
    <h1 class="text-2xl font-bold mb-4">Page Not Found</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex justify-center gap-4">
      <a
        href={import.meta.env.BASE_URL}
        class="inline-flex items-center px-5 py-2.5 rounded-lg bg-primary-600 text-white font-medium hover:bg-primary-700 transition-colors"
      >
        Go Home
      </a>
      <a
        href={`${import.meta.env.BASE_URL}modules`}
        class="inline-flex items-center px-5 py-2.5 rounded-lg border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-medium hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors"
      >
        Browse Modules
      </a>
    </div>
  </div>
</BaseLayout>
