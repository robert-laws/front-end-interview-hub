---
import BaseLayout from '../layouts/BaseLayout.astro';
import ModuleCard from '../components/home/ModuleCard.astro';
import modulesMeta from '../data/modules-meta.json';
import topicGroups from '../data/topic-groups.json';

const sortedGroups = [...topicGroups].sort((a, b) => a.order - b.order);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight mb-6">
        Master Front-End
        <span class="text-primary-600 dark:text-primary-400">Interview Topics</span>
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
        Deep-dive into the exact topics that show up in real interviews: CSS mastery, accessibility, debugging, CMS customization, and more. Each module is a self-contained lesson with explanations, code examples, interactive demos, and quizzes.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="#modules"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-primary-600 text-white font-semibold hover:bg-primary-700 transition-colors"
        >
          Browse Modules
          <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </a>
        <a
          href={`${import.meta.env.BASE_URL}about`}
          class="inline-flex items-center px-6 py-3 rounded-lg border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-semibold hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- Topic Groups -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
    <h2 class="text-2xl font-bold mb-6">Topic Areas</h2>
    <div class="flex flex-wrap gap-2" id="topic-filters">
      <button
        class="topic-filter-btn px-4 py-2 rounded-full text-sm font-medium border border-primary-300 dark:border-primary-700 bg-primary-50 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 transition-colors"
        data-topic="all"
      >
        All ({modulesMeta.length})
      </button>
      {sortedGroups.map((group) => (
        <button
          class="topic-filter-btn px-4 py-2 rounded-full text-sm font-medium border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-600 transition-colors"
          data-topic={group.id}
        >
          {group.title} ({group.moduleIds.length})
        </button>
      ))}
    </div>
  </section>

  <!-- Module Grid -->
  <section id="modules" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4" id="module-grid">
      {modulesMeta.map((mod) => (
        <ModuleCard {...mod} />
      ))}
    </div>
  </section>
</BaseLayout>

<script>
  const filterBtns = document.querySelectorAll('.topic-filter-btn');
  const moduleCards = document.querySelectorAll('#module-grid > a');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const topic = (btn as HTMLElement).dataset.topic;

      // Update active button styles
      filterBtns.forEach((b) => {
        b.classList.remove('border-primary-300', 'dark:border-primary-700', 'bg-primary-50', 'dark:bg-primary-900/30', 'text-primary-700', 'dark:text-primary-300');
        b.classList.add('border-gray-200', 'dark:border-gray-700', 'text-gray-600', 'dark:text-gray-400');
      });
      btn.classList.remove('border-gray-200', 'dark:border-gray-700', 'text-gray-600', 'dark:text-gray-400');
      btn.classList.add('border-primary-300', 'dark:border-primary-700', 'bg-primary-50', 'dark:bg-primary-900/30', 'text-primary-700', 'dark:text-primary-300');

      // Filter cards
      moduleCards.forEach((card) => {
        const cardTopic = (card as HTMLElement).dataset.topicGroup;
        if (topic === 'all' || cardTopic === topic) {
          (card as HTMLElement).style.display = '';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>
